%token NUMBER STRING JOSI WORD COMMENT

%left '+' '-'
%left '*' '/' '%'
%left '^'

%%
program : stmt_list { return $1; }
        ;

stmt_list : { $$ = '';}
		| stmt_list stmt { $$ = $1 + $2+ '\n';}
		;

stmt : assign { $$ = $1 + ';' }
		| expr { $$ = $1 + ';' }
		| COMMENT
		;

assign : WORD '=' expr { $$ = $1 + '=' + $3;}
		;

expr : expr '+' expr { $$ = $1 + '+' + $3; }
		| expr '-' expr { $$ = $1 + '-' + $3; }
		| expr '*' expr { $$ = $1 + '*' + $3; }
		| expr '/' expr { $$ = $1 + '/' + $3; }
		| expr '%' expr { $$ = $1 + '%' + $3; }
		| '(' expr ')' { $$ = '(' + $2 + ')'; }
		| primary
		;

primary : NUMBER
		| STRING
		| WORD
		;

%%
