%token NUMBER STRING JOSI WORD COMMENT

%left '+' '-'
%left '*' '/' '%'
%left '^'

%%
program : stmt_list { return commands.dic['test'] + '\n' + $1; }
        ;

stmt_list : { $$ = '';}
		| stmt_list stmt { $$ = $1 + $2+ '\n';}
		;

stmt : assign { $$ = $1 + ';' }
		| funcall { $$ = $1 + ';' }
		| expr { $$ = $1 + ';' }
		| COMMENT
		;

assign : WORD '=' expr { $$ = $1 + '=' + $3;}
		;

funcall : args WORD { $$ = commands.dic[$2] + '(' + $1 + ')';}
		| WORD { $$ = commands.dic[$1] + '()';}
		;

args : phrase
		| args phrase { $$ = $1 + ',' + $2;}
		;

phrase : '{' phrase_part '}' JOSI { $$ = $2 }
		;

phrase_part : WORD ':' expr { $$ = $3 }
		| phrase_part ',' WORD ':' expr { $$ = $1 + ',' + $5 }
		;

expr : expr '+' expr { $$ = $1 + '+' + $3; }
		| expr '-' expr { $$ = $1 + '-' + $3; }
		| expr '*' expr { $$ = $1 + '*' + $3; }
		| expr '/' expr { $$ = $1 + '/' + $3; }
		| expr '%' expr { $$ = $1 + '%' + $3; }
		| '(' expr ')' { $$ = '(' + $2 + ')'; }
		| primary
		;

primary : NUMBER
		| STRING
		;

%%
